@page 
@model PRN221_PROJECT_FoodOrder.Pages.ResetPasswordModel
@{
}
<section class="hero-section gap" style="background-image: url(/img/background-1.png);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="200" data-aos-duration="300">
                <div class="restaurant">
                    <h1 class="mb-4">
                        Reset Password
                    </h1>
                    <p class="mb-4">Please enter your valid email to reset your password</p>
                    <form method="post">
                        <label class="mb-2 form-label">Email</label>
                        <input asp-for="@Model.emailResetPassword" type="text" class="form-control form-control-lg w-75 mb-3" />
                        <input type="submit" class="btn btn-primary w-75 py-2" value="Send Email" style="background-color: #F29F05;border: 1px solid #F29F05" />
                    </form>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-up" data-aos-delay="300" data-aos-duration="400">
                <div class="img-restaurant">
                    <img alt="man" src="https://bslthemes.com/html/quickeat/assets/img/photo-1.png">
                    <div class="wilmington">
                        <img alt="img" src="https://websitecukcukvn.misacdn.net/wp-content/uploads/2022/03/KFC-tai-viet-nam.jpg" style="width: 90px;object-fit:cover">
                        <div>
                            <p>Restaurant of the Month</p>
                            <h6>KFC Lang Ha</h6>
                            <div>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-solid fa-star"></i>
                                <i class="fa-regular fa-star-half-stroke"></i>
                            </div>
                        </div>
                    </div>
                    <div class="wilmington location-restaurant">
                        <i class="fa-solid fa-location-dot"></i>
                        <div>
                            <h6>12 Restaurant</h6>
                            <p>In Your city</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section JavaScript {
    <script>
        // Get the success message from TempData and display it as a toast
        document.addEventListener("DOMContentLoaded", function () {
            var msg = "@ViewData["MSG"]";
            if (msg === "Email sent! Please check your email") {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: 'Email sent! Please check your email',
                    confirmButtonColor: '#F29F05',
                    confirmButtonText: 'Oke'
                }).then((result) => {

                });
            } else if (msg === "Your email is not existed in system!") {
                Swal.fire({
                    icon: 'error',
                    title: 'Sent email failed!',
                    text: 'Your email is not existed in system!',
                    confirmButtonColor: '#F29F05',
                    confirmButtonText: 'OK'
                })
            } 
        });
    </script>
}
