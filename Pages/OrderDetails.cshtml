@page
@model PRN221_PROJECT_FoodOrder.Pages.OrderDetailsModel
@{
    int ordId = ViewBag.OID;

}
<style>
    .page-item.active .page-link {
        background-color: #F29F05;
        border-color: #F29F05;
    }
</style>
<section class="gap">
    <div class="container">
        <div class="row">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="fw-bold mb-3">Order Details</h3>
                    <form method="post">
                        <table id="myTable" class="table">
                            <thead>
                                <tr>
                                    <td>Order Id</td>
                                    <td>Product Name</td>
                                    <td>Price</td>
                                    <td>Amount</td>
                                    <td>Total</td>
                                    <td></td>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (OrderItem item in ViewBag.item)
                                {
                                    <tr>
                                        <td>@item.OrderId</td>
                                        <td>@item.ItemName</td>
                                        <td>@item.UnitCost</td>
                                        <td>@item.Amount</td>
                                        <td>@item.Subtotal</td>
                                        <td>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="mt-3 d-flex justify-content-end">
                            <input type="hidden" value="@ordId" asp-for="@Model.ord.OrderId" />
                            <button type="button" class="btn btn-primary mb-3 me-3" data-bs-toggle="modal"
                                    style="background-color: #F29F05; border: 1px solid #F29F05"
                                    data-bs-target="#exampleModal">
                                Confirm Order
                            </button>
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Order</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>
                                                Wanna confirm this order?
                                            </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary"
                                                    style="background-color:limegreen;border: 1px; color: white">
                                                Agree
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a class="btn btn-primary mb-3"
                               style="background-color: #F29F05; border: 1px solid #F29F05"
                               asp-page="ManageOrder">
                                Return
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
