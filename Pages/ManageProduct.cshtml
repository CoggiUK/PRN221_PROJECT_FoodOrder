@page
@model PRN221_PROJECT_FoodOrder.Pages.ManageProductModel
@{

}


<style>
    .page-item.active .page-link {
        background-color: #F29F05;
        border-color: #F29F05;
    }
</style>
<section class="gap">
    <div class="container">
        <div class="row">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="fw-bold mb-3">Manage Product</h3>
                    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal"
                            style="background-color: #F29F05; border: 1px solid #F29F05"
                            data-bs-target="#exampleModal">
                        Create Product
                    </button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <form method="post">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel">Create New Product</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">

                                        <table border="0">
                                            <tr>
                                                <td>Name</td>
                                                <td width="50"></td>
                                                <td>
                                                    <input class="form-control" type="text" asp-for="@Model.product.ProductName" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Type</td>
                                                <td width="50"></td>
                                                <td>
                                                    <input class="form-control" type="text" asp-for="@Model.product.ProductType" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Price</td>
                                                <td width="50"></td>
                                                <td>
                                                    <input class="form-control" type="number" asp-for="@Model.product.UnitPrice" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Description</td>
                                                <td width="50"></td>
                                                <td>
                                                    <textarea class="form-control" rows="4" cols="23" placeholder="Write Product's description here" asp-for="@Model.product.Description"></textarea>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>Imagine</td>
                                                <td width="50"></td>
                                                <td>
                                                    <input class="form-control" type="text" asp-for="@Model.product.ProductImage" />

                                                </td>
                                            </tr>
                                        </table>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="submit" class="btn btn-primary">Create</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    @*<a class="btn btn-primary mb-3" style="background-color: #F29F05; border: 1px solid #F29F05">
                    Create Product
                    </a>*@
                    <table id="myTable" class="table">
                        <thead>
                            <tr>
                                <td>Product Id</td>
                                <td>Product Name</td>
                                <td>Price</td>
                                <td>Status</td>
                                <td></td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Product item in ViewBag.listP)
                            {
                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.UnitPrice</td>
                                    @if(item.Status==true){
                                        <td>
                                            <span class="badge bg-success" style="vertical-align: unset;margin-left: 0px;">Active</span>
                                            
                                            </td>
                                    }else{
                                        <td>
                                            <span class="badge bg-danger" style="vertical-align: unset;margin-left: 0px;">Disable</span>
                                            </td>
                                    }

                                    <td class="d-flex align-items-center">
                                        <a asp-page="ProductDetails" asp-route-proid="@item.ProductId"><i class="fa-solid fa-eye text-secondary"></i></a>
                                        <a asp-route-proid="@item.ProductId" asp-page-handler="Disable" class="ms-2"><i class="fa-solid fa-trash text-secondary"></i></a>
                                        <form method="post" asp-page-handler="Delete" asp-route-proid="@item.ProductId" onsubmit="return confirm('Are you sure you want to delete this product?');" class="ms-2">
                                            <button type="submit" class="btn btn-link"><i class="fa-solid fa-trash text-danger"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>