@page
@model PRN221_PROJECT_FoodOrder.Pages.ProductDetailsModel
@{
    Product p = ViewBag.product;
}
<section class="gap">
    <div class="container">
        <div class="row">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="fw-bold mb-3">Product Details</h3>
                    <form method="post">
                        <div class="row gy-3">
                            <div class="col-md-6">
                                <label class="form-label">Product ID</label>
                                <input value="@p.ProductId" class="form-control" asp-for="@Model.needEdit.ProductId" readonly />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Name</label>
                                <input value="@p.ProductName" class="form-control" asp-for="@Model.needEdit.ProductName" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Type</label>
                                <input value="@p.ProductType" class="form-control" asp-for="@Model.needEdit.ProductType" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Price</label>
                                <input type="number" value="@p.UnitPrice" class="form-control" asp-for="@Model.needEdit.UnitPrice" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Description</label>
                                <input value="@p.Description" class="form-control" asp-for="@Model.needEdit.Description" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Rating</label>
                                <input value="@p.Rating" class="form-control" disabled />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Image</label>
                                <img id="avatarShowing" src="@p.ProductImage" height="200" style="object-fit:contain" class="ms-3"/>
                                <input value="@p.ProductImage" class="form-control mt-2" asp-for="@Model.needEdit.ProductImage" onchange="changeImagePreview()"/>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Status</label>

                                @if (p.Status == true)
                                {
                                    <select class="form-select" asp-for="@Model.needEdit.Status">
                                        <option value="true">Active</option>
                                        <option value="false">Deactive</option>
                                    </select>
                                }
                                else
                                {
                                    <select class="form-select" asp-for="@Model.needEdit.Status">
                                        <option value="true">Deactive</option>
                                        <option value="false">Active</option>
                                    </select>
                                }

                            </div>
                        </div>
                        <div class="mt-3 d-flex justify-content-end">
                            <button type="button" class="btn btn-primary mb-3 me-3" data-bs-toggle="modal"
                                    style="background-color: #F29F05; border: 1px solid #F29F05"
                                    data-bs-target="#exampleModal">
                                Edit Product
                            </button>
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Edit</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>
                                                Wanna save these changes to the product ?
                                            </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-primary"
                                                    style="background-color:limegreen;border: 1px; color: white">
                                                Agree
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a class="btn btn-primary mb-3"
                               style="background-color: #F29F05; border: 1px solid #F29F05"
                               asp-page="ManageProduct">
                                Return
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section JavaScript {
    <script>

        function changeImagePreview() {
            let avatarshowing = document.querySelector("#avatarShowing");
            let inputAvatar = avatarshowing.nextElementSibling;
            avatarshowing.src = inputAvatar.value;
        }
    </script>
}
